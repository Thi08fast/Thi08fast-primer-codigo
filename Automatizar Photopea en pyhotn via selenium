from selenium import webdriver

# Configurar el navegador 
driver = webdriver.Chrome(executable_path="C:\Program Files\Google\Chrome\Application")

# Abrir Photopea
driver.get("https://www.photopea.com/")

# Cargar una imagen
input_file = driver.find_element_by_css_selector("input[type='file']")
input_file.send_keys(r"\\WS2K19STD\perfiles$\thiago.schaerer\Documents\Mis imágenes\Eduardiño.png")

# Continuar con la edición (por ejemplo, ajustar el brillo)

{



}

# Cerrar
driver.quit()
